import mysql.connector

# Connect to MySQL server
conn = mysql.connector.connect(
    host="localhost",
    user="root",
    password=""  # Add your MySQL password if you have one
)

cursor = conn.cursor()

# Create a new database
db_name = "my_python_app_db"
cursor.execute(f"CREATE DATABASE IF NOT EXISTS {db_name}")
print(f"‚úÖ Database '{db_name}' created or already exists.")

# Optional: use the database and create a table
cursor.execute(f"USE {db_name}")
cursor.execute("""
    CREATE TABLE IF NOT EXISTS users (
        id INT AUTO_INCREMENT PRIMARY KEY,
        name VARCHAR(100),
        email VARCHAR(100)
    )
""")
print("üóÇÔ∏è Table 'users' created.")

# Close connection
cursor.close()
conn.close()
